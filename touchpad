	echo "${red}T${F-}" > $output
	polybar-msg hook touchpad 1
elif [ $state == "0" ]; then
	xinput --enable "SynPS/2 Synaptics TouchPad"
	echo "${green}T${F-}" > $output
	polybar-msg hook touchpad 1
